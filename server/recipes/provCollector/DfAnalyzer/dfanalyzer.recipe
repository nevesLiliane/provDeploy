BootStrap: docker
From: ubuntu:23.04


%runscript
   exec "$@"

%files

   create_tomcat_admin_user.sh  /create_tomcat_admin_user.sh
   run.sh                       /etc/service/tomcat/run
   start_dfa.sh                 start_dfa.sh
   DfAnalyzer                   /home/DfAnalyzer

%environment
  
  export TOMCAT_MAJOR_VERSION=8
  export TOMCAT_MINOR_VERSION=8.0.11
  CATALINA_HOME=/tomcat
  export CATALINA_HOME

  export JAVA_VER=8
  export JAVA_HOME=/usr/lib/jvm/java-8-openjdk-amd64

%labels

   AUTHOR lilianeneves8@gmail.com

%post

  apt-get update && \
  apt-get install -yq --no-install-recommends wget pwgen ca-certificates && \
  apt-get clean && \
  rm -rf /var/lib/apt/lists/*

  wget -q https://archive.apache.org/dist/tomcat/tomcat-${TOMCAT_MAJOR_VERSION}/v${TOMCAT_MINOR_VERSION}/bin/apache-tomcat-${TOMCAT_MINOR_VERSION}.tar.gz && \
  wget -qO- https://archive.apache.org/dist/tomcat/tomcat-${TOMCAT_MAJOR_VERSION}/v${TOMCAT_MINOR_VERSION}/bin/apache-tomcat-${TOMCAT_MINOR_VERSION}.tar.gz.md5 | md5sum -c - && \
  tar zxf apache-tomcat-*.tar.gz && \
  rm apache-tomcat-*.tar.gz && \
  mv apache-tomcat* tomcat

  apt -y install wget apt-transport-https

  chmod +x /*.sh
  chmod +x /etc/service/tomcat/run

  chmod +x /start_dfa.sh
  ls /home/DfAnalyzer/
  chmod +x /home/DfAnalyzer/restore-database.sh


  mkdir tomcat


  apt-get -y update

  DEBIAN_FRONTEND=noninteractive apt-get install -y -q software-properties-common
  
  apt-get update 

  apt-get install -y openjdk-8-jdk
  apt-get clean

  echo "export JAVA_HOME=/usr/lib/jvm/java-8-openjdk-amd64" >> ~/.bashrc

  apt-get clean  
  #rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*
